@model EmployeeApp.Models.Employee

<h2>Add Employee</h2>

<form asp-action="AddEmployee" method="post">
    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input type="text" class="form-control" asp-for="FirstName" required />
    </div>
    <div class="form-group">
        <label for="LastName">Last Name</label>
        <input type="text" class="form-control" asp-for="LastName" required />
    </div>
    <div class="form-group">
        <label for="JobTitle">Job Title</label>
        <input type="text" class="form-control" asp-for="JobTitle" required />
    </div>
    <div class="form-group">
        <label for="Salary">Salary</label>
        <input type="number" class="form-control" asp-for="Salary" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Employee</button>
</form>
